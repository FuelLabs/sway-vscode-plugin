{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/client/out/**/*.js"],
      "preLaunchTask": "npm: esbuild-watch",
      "sourceMaps": true
    },
    {
      "name": "Attach to forc-lsp",
      "type": "lldb",
      "request": "attach",
      "pid": "${command:pickProcess}",
      "sourceLanguages": ["rust"]
    }
  ],
  "compounds": [
    {
      "name": "Debug Extension + Server",
      "configurations": ["Launch Extension", "Attach to forc-lsp"]
    }
  ]
}
